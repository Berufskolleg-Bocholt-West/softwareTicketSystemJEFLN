<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="rootPane" prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mainpagegui.HelloController">
    <children>
        <!-- Menübutton (Hamburger-Menü) -->
        <VBox fx:id="AufmachenButton" layoutX="20.0" layoutY="20.0" spacing="5.0" style="-fx-cursor: hand;">
            <children>
                <Rectangle width="30.0" height="4.0" fill="#FFFFFF" />
                <Rectangle width="30.0" height="4.0" fill="#FFFFFF" />
                <Rectangle width="30.0" height="4.0" fill="#FFFFFF" />
            </children>
        </VBox>

        <!-- Seitenmenü -->
        <VBox fx:id="menuDrawer" prefWidth="150.0" prefHeight="650.0" layoutX="-200.0" style="-fx-background-color: #222;">
            <children>
                <Button fx:id="MenueZUButton" text="✖" style="-fx-background-color: #FF5555; -fx-text-fill: white; -fx-font-size: 16px;"/>
                <Button text="Option 1" prefWidth="150.0" style="-fx-background-color: #444; -fx-text-fill: white;"/>
                <Button text="Option 2" prefWidth="150.0" style="-fx-background-color: #444; -fx-text-fill: white;"/>
                <Button text="Option 3" prefWidth="150.0" style="-fx-background-color: #444; -fx-text-fill: white;"/>
            </children>
        </VBox>

        <!-- Tabelle -->
        <TableView fx:id="tableView" layoutX="200.0" layoutY="50.0" prefHeight="450.0" prefWidth="600.0">
            <columns>
                <TableColumn prefWidth="300.0" text="Spalte 1" />
                <TableColumn prefWidth="300.0" text="Spalte 2" />
            </columns>
        </TableView>

        <!-- Rechte Seitenleiste -->
        <VBox layoutX="820.0" layoutY="50.0" spacing="10.0">
            <children>
                <Label text="Eingabe:" style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
                <TextArea fx:id="inputArea" prefHeight="200.0" prefWidth="160.0" style="-fx-background-color: #F5F5F5;"/>
                <Label text="Ersteller:" style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
                <TextArea fx:id="outputArea" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: #F5F5F5;"/>
            </children>
        </VBox>

        <!-- Untere Buttons mit fixierter Position -->
        <VBox layoutX="0" layoutY="0" prefWidth="1000.0" alignment="BOTTOM_RIGHT">
            <children>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Speichern" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="80.0" />
                        <Button text="Laden" style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="80.0" />
                        <Button text="Löschen" style="-fx-background-color: #F44336; -fx-text-fill: white;" prefWidth="80.0" />
                    </children>
                </HBox>
            </children>
            <AnchorPane.bottomAnchor>10.0</AnchorPane.bottomAnchor>
            <AnchorPane.rightAnchor>10.0</AnchorPane.rightAnchor>
        </VBox>
    </children>
</AnchorPane>
