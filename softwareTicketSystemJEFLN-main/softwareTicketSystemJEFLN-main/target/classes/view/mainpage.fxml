<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="652.0" prefWidth="1223.0" stylesheets="@../styles/mainpage.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bkbocholt.model.guihandler.mainpage">
    <children>
        <!-- Table for quick showing tickets -->
        <TableView fx:id="ticketTable" layoutX="245.0" layoutY="15.0" prefHeight="541.0" prefWidth="649.0">
        <columns>
                <TableColumn text="Id" />
                <TableColumn text="Titel" />
                <TableColumn text="Status" />
                <TableColumn text="Priority" />
                <TableColumn text="Assignee" />
                <TableColumn text="Creator" />
            </columns>
        </TableView>
        <!-- Ticket Loader -->
        <VBox layoutX="923.0" layoutY="15.0" prefHeight="635.0" prefWidth="290.0" spacing="10.0" styleClass="vbox-container">
        <children>
                <Label styleClass="label-large" text="Title:" />
                <TextArea fx:id="inputTitle" prefHeight="25" prefWidth="160.0" styleClass="input-field" />
                <Label styleClass="label-small" text="Contents:" />
                <Label styleClass="label-small" text="Creator:" />
                <TextArea fx:id="inputText" prefHeight="282.0" prefWidth="245.0" styleClass="input-field" />
                <Label fx:id="creatorLabel" styleClass="label-small" />

                <!-- Buttons directly under the Ticket Loader -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnSave" onAction="#save" prefWidth="80.0" styleClass="btn-save" text="Save" />
                        <Button fx:id="btnLoad" prefWidth="80.0" styleClass="btn-load" text="Load" />
                        <Button fx:id="btnDelete" prefWidth="80.0" styleClass="btn-delete" text="Delete" />
                    </children>
                </HBox>
            </children>
        </VBox>
      <ComboBox fx:id="ComboBoxpriority" layoutX="43.0" layoutY="15.0" prefWidth="150.0" />
      <ComboBox fx:id="AssignedUser" layoutX="43.0" layoutY="54.0" prefWidth="150.0" />
      <ComboBox fx:id="Creator" layoutX="43.0" layoutY="133.0" prefWidth="150.0" />
      <ComboBox fx:id="Status" layoutX="43.0" layoutY="96.0" prefWidth="150.0" />

        

    </children>
</AnchorPane>
