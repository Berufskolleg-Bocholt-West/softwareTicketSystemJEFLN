<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="rootPane" prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bkbocholt.model.guihandler.mainpage">
    <children>

        <TableView fx:id="ticketTable" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.bottomAnchor="50.0">
            <columns>
                <TableColumn text="Id"/>
                <TableColumn text="Titel" />
                <TableColumn text="Status" />
                <TableColumn text="Priority" />
                <TableColumn text="Assignee" />
                <TableColumn text="Creator" />
            </columns>
        </TableView>

        <!-- Rechtes Menü -->
        <VBox layoutX="800.0" layoutY="50.0" spacing="10.0">
            <children>
                <Label text="Überschrift" style="-fx-font-size: 18px; -fx-text-fill: #444;"/>
                <TextArea fx:id="inputTitle" prefHeight="25" prefWidth="180.0" style="-fx-background-color: #F5F5F5;"/>
                <Label text="Inhalt:" style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
                <TextArea fx:id="inputText" prefHeight="300.0" prefWidth="180.0" style="-fx-background-color: #F5F5F5;"/>
                <Label text="Ersteller:" style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
                <Label fx:id="creatorLabel" style="-fx-font-size: 14px; -fx-text-fill: #444;"/>
            </children>
        </VBox>

        <!-- Untere Buttons -->
        <HBox spacing="10.0" alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button fx:id="btnSave" text="Speichern" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="80.0" onAction="#save"/>
                <Button fx:id="btnLoad" text="Laden" style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="80.0" />
                <Button fx:id="btnDelete" text="Löschen" style="-fx-background-color: #F44336; -fx-text-fill: white;" prefWidth="80.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
