<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.bkbocholt.model.guihandler.Login"
            stylesheets="@../styles/loginpage.css">

    <StackPane>
        <VBox alignment="CENTER" spacing="20" padding="40">
            <!-- Title with improved styling -->
            <Label text="Login" styleClass="title-label" />

            <!-- Login form with GridPane -->
            <GridPane hgap="15" vgap="10" alignment="CENTER">
                <Label text="Email" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="email" promptText="Enter your email" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <PasswordField fx:id="password" promptText="Enter your password" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Re-enter Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <PasswordField fx:id="reEnter" promptText="Re-enter your password" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Register button with modern look -->
                <Button text="Registrieren" styleClass="login-button" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="CENTER" onAction="#handleLogin" fx:id="btnRegister"/>
            </GridPane>
        </VBox>
    </StackPane>
</AnchorPane>
